{ 
  "compilerOptions": {
    "target": "es2020", 
    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": "src",
    "paths": {
      "*": ["*"],
      "@/*": ["*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
    
  }
}